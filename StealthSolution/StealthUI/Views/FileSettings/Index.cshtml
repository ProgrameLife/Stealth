@{
    ViewData["Title"] = "FileSetting";
}

<div style="margin-top:10px;">
    <h2 style="height: 50px;">FileSettings</h2>
</div>
<div id="addFilesetting" style="text-align:right;margin:10px;">
    <addmodal></addmodal>
</div>
<div id="tablediv" style="padding:10px;">
    <Filesetting-row :Filesettings="Filesettings"></Filesetting-row>
</div>
<div id="editdiv">
    <editmodal v-bind:editdata="editdata"></editmodal>
</div>
@section Scripts{

    <script type="text/x-template" id="Filesetting-tr">
        <div>
            <row :gutter="16">
                <col span="24">
                <Table border :columns="columns" :data="data"></Table>
                </col>
            </row>
        </div>
    </script>
    <script>
        var editVue = null;
        var tempFilesetting = null;
        //table组件
        Vue.component("Filesetting-row", {
            template: "#Filesetting-tr",
            props: ["Filesettings"],
            data: function () {
                return {
                    columns: [
                        {
                            title: 'ID',
                            key: 'id',
                            width: 50,
                        },
                        {
                            title: 'KeyName',
                            key: 'keyName',
                        },
                        {
                            title: 'FileName',
                            key: 'fileName',

                        },
                        {
                            title: 'FilePath',
                            key: 'filePath'
                        },
                        {
                            title: 'FileEncoding',
                            key: 'fileEncoding',

                        },
                        {
                            title: 'Validate',
                            key: 'validate',
                            width: 90,
                        },
                        {
                            title: 'operate',
                            key: 'action',
                            width: 100,
                            align: 'center',
                            render: (h, params) => {
                                return h('div', [
                                    h('Button', {
                                        props: {
                                            type: 'success',
                                            icon: 'md-create',
                                            size: 'small'
                                        },
                                        style: {
                                            marginRight: '5px'
                                        },
                                        on: {
                                            click: () => {
                                                this.edit(params.row)
                                            }
                                        }
                                    }),
                                    h('Button', {
                                        props: {
                                            type: 'error',
                                            icon: 'ios-trash',
                                            size: 'small',
                                        },
                                        on: {
                                            click: () => {
                                                this.delete(params.row, params.index)
                                            }
                                        }
                                    })
                                ]);
                            }
                        }
                    ],
                    data: this.Filesettings
                }
            },
            methods: {
                edit: function (Filesetting) {
                    if (editVue == null) {
                        editVue = new Vue({
                            el: "#editdiv",
                            data: {
                                editdata: {
                                    Filesetting: Filesetting,
                                    showmodal: true,
                                    ruleValidate: {
                                        keyName: [
                                            { required: true, message: 'keyname cannot be empty, is required', trigger: 'blur' },
                                            { type: 'string', max: 64, message: 'length less than 256', trigger: 'blur' }
                                        ],
                                        fileName: [
                                            { required: true, message: 'FileName cannot be empty, is required', trigger: 'blur' }
                                        ],
                                        fileEncoding: [
                                            { required: true, message: 'FileEncoding cannot be empty, is required', trigger: 'blur' }
                                        ],
                                    }
                                }
                            }
                        });
                    } else {
                        editVue.editdata.Filesetting = Filesetting;
                        editVue.editdata.showmodal = true;
                    }

                    //深度clone
                    tempFilesetting = JSON.parse(JSON.stringify(editVue.editdata.Filesetting))
                },
                delete: function (Filesetting, index) {
                    if (confirm("delete" + Filesetting.keyName + "?")) {
                        axios.delete("/removeFilesetting/" + Filesetting.id)
                            .then(function (response) {
                                //判断请求状态
                                if (response.status == 200) {
                                    var returnData = response.data
                                    if (returnData.result) {
                                        settlemtntSettingVue.Filesettings.splice(index, 1)
                                    } else {
                                        alert(returnData.messages)
                                    }
                                }
                                else {
                                    alert(response.statusText);
                                }
                            })
                            .catch(function (error) {
                                alert(error)
                                console.log(error);
                            });
                    }
                }
            }
        })
        var settlemtntSettingVue = null;
        axios.get("/Filesettings")
            .then(function (response) {
                //判断请求状态
                if (response.status == 200) {
                    var returnData = response.data
                    if (returnData.result) {
                        settlemtntSettingVue = new Vue({
                            el: "#tablediv",
                            data: {
                                Filesettings: returnData.data
                            }
                        });
                    } else {
                        alert(returnData.messages)
                    }
                }
                else {
                    alert(response.statusText);
                }
            })
            .catch(function (error) {
                alert(error)
                console.log(error);
            });
    </script>

    <script type="text/x-template" id="editmodal-div">
        <Modal v-model="editdata.showmodal"
               title="Edit"
               width="800px"
               :mask-closable="false">
            <div>
                <Form ref="editdata.Filesetting" :model="editdata.Filesetting" :rules="editdata.ruleValidate" label-position="top">
                    <row :gutter="16">
                        <Col span="24">
                        <FormItem label="KeyName" prop="keyName">
                            <Input v-model="editdata.Filesetting.keyName"></Input>
                        </FormItem>
                        </Col>
                    </row>
                    <row :gutter="16">
                        <Col span="12">
                        <FormItem label="FileName" prop="fileName">
                            <Input v-model="editdata.Filesetting.fileName"></Input>
                        </FormItem>
                        </Col>
                        <Col span="12">
                        <FormItem label="FilePath" prop="filePath">
                            <Input v-model="editdata.Filesetting.filePath"></Input>
                        </FormItem>
                        </Col>
                    </row>
                    <row :gutter="16">
                        <Col span="12">
                        <FormItem label="FileEncoding" prop="fileEncoding">
                            <Input v-model="editdata.Filesetting.fileEncoding"></Input>
                        </FormItem>
                        </Col>
                        <Col span="12">
                        <FormItem label="Validate">
                            <i-switch v-model="editdata.Filesetting.validate" size="large">
                                <span slot="valid">true</span>
                                <span slot="invalid">false</span>
                            </i-switch>
                        </FormItem>
                        </Col>
                    </row>
                </Form>
            </div>
            <div slot="footer">
                <Button type="text" size="large" v-on:click="modalCancel">Cancel</Button>
                <Button type="primary" size="large" v-on:click="modalOk">Sava</Button>
            </div>
        </Modal>
    </script>
    <script>
        Vue.component("editmodal", {
            template: "#editmodal-div",
            props: ["editdata"],
            methods: {
                modalOk() {

                    this.$refs['editdata.Filesetting'].validate((valid) => {
                        if (valid) {
                            axios.put("/modifyFilesetting", this.editdata.Filesetting)
                                .then(function (response) {
                                    //判断请求状态
                                    if (response.status == 200) {
                                        var returnData = response.data;
                                        if (returnData.result) {
                                            editVue.editdata.showmodal = false;
                                        } else {
                                            alert(returnData.messages);
                                        }
                                    }
                                    else {
                                        alert(response.statusText);
                                    }
                                })
                                .catch(function (error) {
                                    alert(error)
                                    console.log(error);
                                });

                        } else {
                            this.$Message.error('validate failure!');
                        }
                    })
                },
                modalCancel() {
                    for (var key in this.editdata.Filesetting) {
                        this.editdata.Filesetting[key] = tempFilesetting[key];
                    }
                    editVue.editdata.showmodal = false;
                }
            }
        })
    </script>


    <script type="text/x-template" id="addmodal-div">
        <div>
            <Button type="primary" v-on:click="showmodal = true">Add</Button>
            <Modal v-model="showmodal"
                   title="Add"
                   width="800px"
                   :mask-closable="false">
                <div>
                    <Form ref="formValidate" :model="formValidate" :rules="ruleValidate" label-position="top">
                        <row :gutter="16">
                            <Col span="24">
                            <FormItem label="KeyName" prop="keyName">
                                <Input v-model="formValidate.keyName"></Input>
                            </FormItem>
                            </Col>
                        </row>
                        <row :gutter="16">                         
                            <Col span="12">
                            <FormItem label="FileName" prop="fileName">
                                <Input v-model="formValidate.fileName"></Input>
                            </FormItem>
                            </Col>
                            <Col span="12">
                            <FormItem label="FilePath" prop="filePath">
                                <Input v-model="formValidate.filePath"></Input>
                            </FormItem>
                            </Col>
                        </row>
                        <row :gutter="16">
                            <Col span="12">
                            <FormItem label="FileEncoding" prop="fileEncoding">
                                <Input v-model="formValidate.fileEncoding"></Input>
                            </FormItem>
                            </Col>
                            <FormItem label="Validate">
                                <i-switch v-model="editdata.Filesetting.validate" size="large">
                                    <span slot="valid">true</span>
                                    <span slot="invalid">false</span>
                                </i-switch>
                            </FormItem>
                            </Col>
                        </row>                  
                    </Form>
                </div>
                <div slot="footer">
                    <Button type="text" size="large" v-on:click="modalCancel">Cancel</Button>
                    <Button type="primary" size="large" v-on:click="modalOk">Sava</Button>
                </div>
            </Modal>
        </div>
    </script>
    <script>
        Vue.component("addmodal", {
            template: "#addmodal-div",
            data: function () {
                return {
                    showmodal: false,
                    formValidate: {
                        id: 0,
                        keyName: "",
                        fileName: "",
                        filePath: "",
                        fileEncoding: "",
                        validate: false
                    },
                    ruleValidate: {
                        keyName: [
                            { required: true, message: 'keyname cannot be empty, is required', trigger: 'blur' },
                            { type: 'string', max: 64, message: 'length less than 256', trigger: 'blur' }
                        ],
                        fileName: [
                            { required: true, message: 'Host cannot be empty, is required', trigger: 'blur' }
                        ],                      
                    }
                }
            },
            methods: {
                modalOk() {
                    this.$refs['formValidate'].validate((valid) => {
                        if (valid) {
                            var obj = this;
                            addFile(this.formValidate, function (newFileSetting) {
                                console.log(newFileSetting)
                                //深度clone
                                // var newSettlemtntSetting = JSON.parse(JSON.stringify(obj.formValidate))
                                settlemtntSettingVue.Filesettings.push(newFileSetting)
                                obj.$refs['formValidate'].resetFields();
                                obj.showmodal = false;
                            });
                        } else {
                            this.$Message.error('validate failure!');
                        }
                    })
                },
                modalCancel() {
                    this.showmodal = false;
                }
            }
        })

        function addFile(Filesetting, callback) {
            axios.post("/addFilesetting", Filesetting)
                .then(function (response) {
                    //判断请求状态
                    if (response.status == 200) {
                        var returnData = response.data;
                        if (returnData.result) {
                            callback(returnData.data);
                        } else {
                            alert(returnData.messages);
                        }
                    }
                    else {
                        alert(response.statusText);
                    }
                })
                .catch(function (error) {
                    alert(error);
                    console.log(error);
                });
        }
        new Vue({
            el: "#addFilesetting"
        });
    </script>
}