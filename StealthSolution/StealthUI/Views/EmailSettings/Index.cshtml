</div>
@section Scripts{

    <script type="text/x-template" id="emailsetting-tr">
        <div>
            <row :gutter="16">
                <col span="24">
                <Table border :columns="columns" :data="data"></Table>
                </col>
            </row>
            <row :gutter="16">
                <col span="24">
                <Page :total="total" :page-size="10" :current="current" v-on:on-change="pageing"/>
                </col>
            </row>
        </div>
    </script>
    <script>
        var editVue = null;
        var tempemailsetting = null;
        //table组件
        Vue.component("emailsetting-row", {
            template: "#emailsetting-tr",
            props: ["emailsettings"],
            data: function () {
                return {
                    columns: [
                        {
                            title: 'ID',
                            key: 'id',
                            width: 50,
                        },
                        {
                            title: 'KeyName',
                            key: 'keyName',
                        },
                        {
                            title: 'Host',
                            key: 'host',

                        },
                        {
                            title: 'Port',
                            key: 'port'
                        },
                        {
                            title: 'UserName',
                            key: 'userName',

                        },
                        {
                            title: 'Password',
                            key: 'password',
                        },
                        {
                            title: 'EmailSubject',
                            key: 'subject',
                        },
                        {
                            title: 'EmailBody',
                            key: 'body',
                        },
                        {
                            title: 'FromAddresses',
                            key: 'fromAddresses',
                        },
                        {
                            title: 'ToAddresses',
                            key: 'toAddresses',
                        },
                        {
                            title: 'IsCompress',
                            key: 'isCompress',
                        },
                        {
                            title: 'CompressFileName',
                            key: 'compressFile',
                        },
                        {
                            title: 'IsAttachment',
                            key: 'isAttachment',
                        },
                        {
                            title: 'AttachmentName',
                            key: 'attachmentName',
                        },
                        {
                            title: 'Validate',
                            key: 'validate',
                            width: 90,
                        },
                        {
                            title: 'operate',
                            key: 'action',
                            width: 100,
                            align: 'center',
                            render: (h, params) => {
                                return h('div', [
                                    h('Button', {
                                        props: {
                                            type: 'success',
                                            icon: 'md-create',
                                            size: 'small'
                                        },
                                        style: {
                                            marginRight: '5px'
                                        },
                                        on: {
                                            click: () => {
                                                this.edit(params.row)
                                            }
                                        }
                                    }),
                                    h('Button', {
                                        props: {
                                            type: 'error',
                                            icon: 'ios-trash',
                                            size: 'small',
                                        },
                                        on: {
                                            click: () => {
                                                this.delete(params.row, params.index)
                                            }
                                        }
                                    })
                                ]);
                            }
                        }
                    ],
                    data: this.emailsettings.list,
                    total: this.emailsettings.total,
                    current: this.emailsettings.current 
                }
            },
            methods: {
                edit: function (emailsetting) {
                    if (editVue == null) {
                        editVue = new Vue({
                            el: "#editdiv",
                            data: {
                                editdata: {
                                    emailsetting: emailsetting,
                                    showmodal: true,
                                    ruleValidate: {
                                        keyName: [
                                            { required: true, message: 'keyname cannot be empty, is required', trigger: 'blur' },
                                            { type: 'string', max: 64, message: 'length less than 256', trigger: 'blur' }
                                        ],
                                        host: [
                                            { required: true, message: 'Host cannot be empty, is required', trigger: 'blur' }
                                        ],                                   
                                        userName: [
                                            { required: true, message: 'UserName cannot be empty, is required', trigger: 'blur' }
                                        ],
                                        password: [
                                            { required: true, message: 'Password cannot be empty, is required', trigger: 'blur' }
                                        ],
                                        fromAddresses: [
                                            { required: true, message: 'FromAddresses cannot be empty, is required', trigger: 'blur' }
                                        ],
                                        toAddresses: [
                                            { required: true, message: 'ToAddresses cannot be empty, is required', trigger: 'blur' }
                                        ],
                                    }
                                }
                            }
                        });
                    } else {
                        editVue.editdata.emailsetting = emailsetting;
                        editVue.editdata.showmodal = true;
                    }

                    //深度clone
                    tempemailsetting = JSON.parse(JSON.stringify(editVue.editdata.emailsetting))
                },
                delete: function (emailsetting, index) {
                    if (confirm("delete  " + emailsetting.keyName + " ?")) {
                        axios.delete("/removeemailsetting/" + emailsetting.id)
                            .then(function (response) {
                                //判断请求状态
                                if (response.status == 200) {
                                    var returnData = response.data
                                    if (returnData.result) {
                                        getEmail(settlemtntSettingVue.emailsettings.current);                                     
                                    } else {
                                        alert(returnData.messages)
                                    }
                                }
                                else {
                                    alert(response.statusText);
                                }
                            })
                            .catch(function (error) {
                                alert(error)
                                console.log(error);
                            });
                    }
                },
                pageing: function (pageindex) {
                    getEmail(pageindex)
                }
            }
        })
        var settlemtntSettingVue = null;

        function getEmail(pageindex) {
            axios.get("/emailsettings/" + pageindex)
                .then(function (response) {
                    //判断请求状态
                    if (response.status == 200) {
                        document.getElementById("tablediv").innerHTML = ' <emailsetting-row :emailsettings="emailsettings"></emailsetting-row>'
                        var returnData = response.data
                        if (returnData.result) {
                         
                            settlemtntSettingVue = new Vue({
                                el: "#tablediv",
                                data: {
                                    emailsettings: {
                                        list: returnData.data.list,
                                        total: returnData.data.total,
                                        current: pageindex
                                    },
                                }
                            });
                        } else {
                            alert(returnData.messages)
                        }
                    }
                    else {
                        alert(response.statusText);
                    }
                })
                .catch(function (error) {
                    alert(error)
                    console.log(error);
                });
        }
        getEmail(1);
    </script>

    <script type="text/x-template" id="editmodal-div">
        <Modal v-model="editdata.showmodal"
