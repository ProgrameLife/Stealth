                        </FormItem>
                        </Col>
                        <Col span="12">
                        <FormItem label="Port" prop="port">
                            <InputNumber v-model="editdata.emailsetting.port" :min="10" :step="1"></InputNumber>
                        </FormItem>
                        </Col>

                    </row>
                    <row :gutter="16">
                        <Col span="12">
                        <FormItem label="FromAddresses" prop="fromAddresses">
                            <Input v-model="editdata.emailsetting.fromAddresses"></Input>
                        </FormItem>
                        </Col>
                        <Col span="12">
                        <FormItem label="ToAddresses" prop="toAddresses">
                            <Input v-model="editdata.emailsetting.toAddresses"></Input>
                        </FormItem>
                        </Col>
                    </row>
                    <row :gutter="16">
                        <Col span="12">
                        <FormItem label="UserName" prop="userName">
                            <Input v-model="editdata.emailsetting.userName"></Input>
                        </FormItem>
                        </Col>
                        <Col span="12">
                        <FormItem label="Password" prop="password">
                            <Input v-model="editdata.emailsetting.password"></Input>
                        </FormItem>
                        </Col>
                    </row>
                    <row :gutter="16">
                        <Col span="24">
                        <FormItem label="EmailSubject" prop="subject">
                            <Input v-model="editdata.emailsetting.subject"></Input>
                        </FormItem>
                        </Col>
                    </row>
                    <row :gutter="16">
                        <Col span="24">
                        <FormItem label="EmailBody" prop="body">
                            <Input type="textarea" v-model="editdata.emailsetting.body"></Input>
                        </FormItem>
                        </Col>
                    </row>
                    <row :gutter="16">
                        <Col span="3">
                        <FormItem label="IsCompress">
                            <i-switch v-model="editdata.emailsetting.isCompress" size="large">
                                <span slot="open">true</span>
                                <span slot="close">false</span>
                            </i-switch>
                        </FormItem>
                        </Col>
                        <Col span="21">
                        <FormItem label="CompressFileName" prop="compressFileName">
                            <Input v-model="editdata.emailsetting.compressFileName"></Input>
                        </FormItem>
                        </Col>
                    </row>
                    <row :gutter="16">
                        <Col span="3">
                        <FormItem label="IsAttachment">
                            <i-switch v-model="editdata.emailsetting.isAttachment" size="large">
                                <span slot="open">true</span>
                                <span slot="close">false</span>
                            </i-switch>
                        </FormItem>
                        </Col>
                        <Col span="21">
                        <FormItem label="AttachmentName" prop="attachmentName">
                            <Input v-model="editdata.emailsetting.attachmentName"></Input>
                        </FormItem>
                        </Col>
                    </row>
                    <row :gutter="16">
                        <Col span="12">
                        <FormItem label="Validate">
                            <i-switch v-model="editdata.emailsetting.validate" size="large">
                                <span slot="valid">true</span>
                                <span slot="invalid">false</span>
                            </i-switch>
                        </FormItem>
                        </Col>
                        <Col span="12">
                        </Col>
                    </row>
                </Form>
            </div>
            <div slot="footer">
                <Button type="text" size="large" v-on:click="modalCancel">Cancel</Button>
                <Button type="primary" size="large" v-on:click="modalOk">Sava</Button>
            </div>
        </Modal>
    </script>
    <script>
        Vue.component("editmodal", {
            template: "#editmodal-div",
            props: ["editdata"],
            methods: {
                modalOk() {

                    this.$refs['editdata.emailsetting'].validate((valid) => {
                        if (valid) {
                            console.log(this.editdata.emailsetting)
                            axios.put("/modifyemailsetting", this.editdata.emailsetting)
                                .then(function (response) {
                                    //判断请求状态
                                    if (response.status == 200) {
                                        var returnData = response.data;
                                        console.log(returnData)
                                        if (returnData.result) {
                                            editVue.editdata.showmodal = false;
                                        } else {
                                            alert(returnData.message);
                                        }
                                    }
                                    else {
                                        alert(response.statusText);
                                    }
                                })
                                .catch(function (error) {
                                    alert(error)
                                    console.log(error);
                                });

                        } else {
                            this.$Message.error('validate failure!');
                        }
                    })
                },
                modalCancel() {
                    for (var key in this.editdata.emailsetting) {
                        this.editdata.emailsetting[key] = tempemailsetting[key];
                    }
                    editVue.editdata.showmodal = false;
                }
            }
        })
    </script>


